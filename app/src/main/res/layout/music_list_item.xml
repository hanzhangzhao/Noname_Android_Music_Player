<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_submit_select"
    android:padding="@dimen/marginSize">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/imgItemSize"
        android:layout_height="@dimen/imgItemSize"
        android:src="@mipmap/tchaikovsky"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/marginSize">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Song name"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/titleSize"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/infoColor"
            android:textSize="@dimen/infoSize"
            android:text="Author"/>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/imgPlayIconSize"
        android:layout_height="@dimen/imgPlayIconSize"
        android:src="@mipmap/play"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/marginSize"/>
</LinearLayout>